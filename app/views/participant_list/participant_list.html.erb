  <div class="container pt-6">
  <% highest_role = current_user.role %> <!-- show onla when logged in as admin-->
  <% highest_role.name %>
  <% if highest_role.get_permission("can_manage_users") || highest_role.name == "super_admin" %>
    <div class="row">
      <div class="col-lg-3 mb-4">
        <%= render "admins/components/menu_buttons" %>
      </div>
      <div id="participant-lists" class="col-lg-9">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
          </svg>
          <h2 class="text-secondary">Teilnahmelisten</h2> <!-- Headline -->
          <h3 class="text-secondary">in csv und pdf Format</h2> <!-- Headline -->
          <h4 class="text-secondary">Einfach zum herunterladen</h2> <!-- Headline -->
      </div>
    </div>
    <div class="col-md-12">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Handle</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">1</th>
            <td>Mark</td>
            <td>Otto</td>
            <td>@mdo</td>
          </tr>
          <tr>
            <th scope="row">2</th>
            <td>Jacob</td>
            <td>Thornton</td>
            <td>@fat</td>
          </tr>
          <tr>
            <th scope="row">3</th>
            <td>Larry</td>
            <td>the Bird</td>
            <td>@twitter</td>
          </tr>
        </tbody>
      </table>

    </div>
  </div>



  <% else %> <!-- if not logged in as admin-->
    <h1 class="text-danger">FORBIDDEN !!!</h1>
  <% end %>


  <%= render "shared/modals/delete_room_modal" %> 
  <%= render "shared/modals/create_room_modal" %>
  <% if preupload_allowed? %>
    <%= render "shared/modals/preupload_presentation_modal" %>
  <% end %>
  <% if shared_access_allowed %>
    <%= render "shared/modals/share_room_modal" %>
  <% end %>
